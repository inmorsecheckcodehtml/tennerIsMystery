<script>
// minimal: click anywhere to play the morse (no UI)
const morseString = '.... .- .-.. .-.. --- / --. .- .-. -.. . -. / ... . -.-. .-. . -';


function playMorse(morse, speed = 0.09){
const ctx = new (window.AudioContext || window.webkitAudioContext)();
let t = ctx.currentTime;
function beep(length){
const o = ctx.createOscillator();
const g = ctx.createGain();
o.connect(g); g.connect(ctx.destination);
o.type = 'sine'; o.frequency.value = 800;
g.gain.setValueAtTime(0.0001, t);
g.gain.exponentialRampToValueAtTime(0.5, t + 0.01);
o.start(t);
t += length;
g.gain.exponentialRampToValueAtTime(0.0001, t);
o.stop(t + 0.02);
}
for (const ch of morse){
if (ch === '.') { beep(speed); t += speed; }
else if (ch === '-') { beep(speed*3); t += speed; }
else if (ch === ' ') { t += speed*2; }
else if (ch === '/') { t += speed*4; }
}
}


document.addEventListener('click', ()=>{
try{ playMorse(morseString); }catch(e){/* silence */}
});


// hoster note in console
console.log('tenner (minimal) loaded.');
</script>


</body>
